<div class="page-gallery">
  <div>
      <div class="page-header">
            <h2>
                {% render 'multilang' with page.title %}
            </h2>
      </div>
   </div>
 </div>
  <div  id="gallery_section-{{section.id}}" class="gallery-section gallery-{{ section.settings.gallery_type }}">
    {% if section.blocks.size > 0 %}
      {% for block in section.blocks %}
        {% if block.settings.image != blank %}
          <div class="image-wrapper">
              <i class="image-{{ block.id }}"></i>
              {{ block.settings.image |  img_url: '500x', crop: 'center' | img_tag: block.settings.image.alt , block.id }}
          </div>
        {% else %}
          <di {{ block.shopify_attributes }}>
            {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
          </div>
        {% endif %}
      {% endfor %}
    {% endif %}
  </div>
</div>
